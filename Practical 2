public class Question3 {

    // draw a square
    public static void square() {
        // print statements here to draw square
        System.out.println("+---+");
        System.out.println("|   |");
        System.out.println("+---+");
    }

    // draw a line
    public static void line() {
        // print statements here to draw line
        System.out.println("======");
    }

    // draw a feet
    public static void Feet() {
        // print statements here to draw line
        System.out.println("=    =");
    }

    // draw the pattern outlined in the question 
    public static void main(String[] args) {
       // call the methods square and line to print 
       // the pattern specified in the question
       line();
       square();
       line();
       square();
       line();
    }

}
